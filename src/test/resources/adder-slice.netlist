####
# Netlist using several fullAdders to implement a 4-bit adder
####
include full-adder.netlist

entity adderSlice

	# Pins
	input a[4]
	input b[4]
	input cin
	
	output cout
	output sum[4]
	
	component fa0 $fullAdder
	component fa1 $fullAdder
	component fa2 $fullAdder
	component fa3 $fullAdder
	

	net cin fa0.cin
	net a0 fa0.a
	net b0 fa0.b
	net sum0 fa0.sum
	
	net fa0.carry fa1.cin
	net a1 fa1.a
	net b1 fa1.b
	net sum1 fa1.sum
	
	net fa1.carry fa2.cin
	net a2 fa2.a
	net b2 fa2.b
	net sum2 fa2.sum
	
	net fa2.carry fa3.cin
	net a3 fa3.a
	net b3 fa3.b
	net sum3 fa3.sum
	
	net cout fa3.carry
	
; # end entity